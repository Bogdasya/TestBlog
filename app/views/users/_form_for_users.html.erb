<%= form_for User.new do |f| %>

  <%= f.label :name, t('name') %>
  <%= f.text_field :name %>

  <%= f.label :email, t('email') %>
  <%= f.text_field :email %>

  <%= f.label :password, t('password') %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, t('confirm_pass') %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit t('register'), class: "btn btn-large btn-primary", id: "registration_button" %>
<% end %>
<%= link_to t('login'), new_session_url, class: "btn btn-large btn-primary"  %>