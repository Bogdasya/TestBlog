<% provide(:title, 'Profile Page') %>
<%= filepicker_js_include_tag %>

<div class="container">
  <h1 class="well"><%= t('profile_page') %> <%= full_name %></h1>

<div class="row">
	<% if @user.image.present? %>
    <%= filepicker_image_tag @user.image, w: 160, h: 160, fit: 'clip'%>
  <% end %>

  <div class="span6 offset3">
    <%= render 'form_for_update', user: @user  %>
  </div>
</div>
	</div>