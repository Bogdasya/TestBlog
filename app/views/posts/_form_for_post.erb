<%= form_for [current_user, Post.new] do |f| %>

  <%= f.label :author, t('author') %>
  <%= f.text_field :author, value: current_user.name, readonly: 'readonly' %>

  <%= f.label :title, t('title') %>
  <%= f.text_field :title %>

  <%= f.label :content, t('content') %>
  <%= f.text_area :content %>

  <%= f.hidden_field :user_id, value: current_user.id%>

  <%= f.submit t('create_post'), class: "btn btn-large btn-primary", id: "create_post" %>
<% end %>